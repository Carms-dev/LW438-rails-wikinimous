<div class="container">
    <h1><%= @article.title %></h1>
    <p><%= @article.content %></p>

    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#edit_article_modal">
        Edit Article
    </button>

    <div class="modal fade" id="edit_article_modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Edit Article</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <%= render 'form', article: @article%>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
        </div>
    </div>
    </div>

    <%= link_to 'delete', article_path(@article), class: 'btn btn-secondary', method: :delete, data: { confirm: 'are ya sure?'} %>

</div>